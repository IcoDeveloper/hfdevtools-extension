{
    "name": "hftemplate-formatter-extension",
    "displayName": "HybridForms Template Formatter",
    "description": "A VSCode formatter for HybridForms template files",
    "version": "1.0.0",
    "publisher": "icomedias",
    "icon": "HF_Extension_icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/IcoDeveloper/hftemplate-formatter-extension.git"
    },
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "configuration": {
            "title": "HybridForms Template Formatter"
        }
    },
    "main": "./dist/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool false",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test",
        "postversion": "git push && git push --tags"
    },
    "devDependencies": {
        "@types/js-beautify": "^1.14.3",
        "@types/mocha": "^10.0.6",
        "@types/node": "20.x",
        "@types/vscode": "^1.90.0",
        "@typescript-eslint/eslint-plugin": "^7.11.0",
        "@typescript-eslint/parser": "^7.11.0",
        "@vscode/test-cli": "^0.0.9",
        "@vscode/test-electron": "^2.4.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "prettier": "^3.3.2",
        "ts-loader": "^9.5.1",
        "typescript": "^5.4.5",
        "webpack": "^5.92.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "js-beautify": "^1.15.1"
    }
}
